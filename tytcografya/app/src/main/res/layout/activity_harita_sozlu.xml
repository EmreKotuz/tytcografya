<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sözlüEkran"
    android:background="@color/black"
    tools:context=".haritaSozlu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView105"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/sayimButton"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_gravity="center|center_horizontal"
                android:background="@color/mavi"
                android:gravity="center"
                android:text="sınav başlamadı"
                android:textColor="@color/beyaz"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView132"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ttte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="120 saniye süren var. BAŞARILAR..."
                android:textColor="@android:color/holo_blue_bright" />

            <TextView
                android:id="@+id/textView108"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/sinaviBaslat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:text="sınavı başlat"
                android:textColor="@color/beyaz"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sınavı bitir" />

            <TextView
                android:id="@+id/sinaviBitir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hemen cevapları öğren  >"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/textView216"
                android:layout_width="170dp"
                android:layout_height="2dp"
                android:background="@color/Red" />

            <TextView
                android:id="@+id/textView103"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView109"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1)"
                android:textColor="@color/mavi" />

            <TextView
                android:id="@+id/textView92"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beşeri Harita insanların dağılışı ve nüfus özelliklerini gösteren haritalardır. "
                android:textColor="@color/beyaz" />

            <TextView
                android:id="@+id/textView98"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/yansısBir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="YANLIŞ"
                        android:textColor="@color/beyaz"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView97"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/doğruBir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DOĞRU"
                        android:textColor="@color/beyaz"
                        android:textSize="18sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView93"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/textView135"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2)"
                    android:textColor="@color/mavi" />

                <TextView
                    android:id="@+id/textView134"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Haritalar ölçeklerine göre ve kullanım alanlarına göre ikiye ayrılırlar."
                    android:textColor="@color/beyaz" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="76dp">

                        <RadioButton
                            android:id="@+id/yanlisR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="YANLIŞ"
                            android:textColor="@color/beyaz"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/doğruR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DOĞRU"
                            android:textColor="@color/beyaz"
                            android:textSize="18sp" />
                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView133"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/textView112"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3)"
                    android:textColor="@color/mavi" />

                <TextView
                    android:id="@+id/textView94"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Haritalarda doğu, batı, kuzey ve güney gibi yönlerin bilinmesi önemli değildir."
                    android:textColor="@color/beyaz" />

                <TextView
                    android:id="@+id/textView99"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <RadioButton
                        android:id="@+id/yanlisIki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="YANLIŞ"
                        android:textColor="@color/beyaz"
                        android:textColorHighlight="@color/mavi"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/doğruIki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DOĞRU"
                        android:textColor="@color/beyaz"
                        android:textSize="18sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView95"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/textView113"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4)"
                    android:textColor="@color/mavi" />

                <TextView
                    android:id="@+id/textView96"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orta ölçekli haritalar ölçekleri 1/20.000 ile 1/500.000 arasında olan haritalardır. "
                    android:textColor="@color/beyaz" />

                <TextView
                    android:id="@+id/textView102"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <RadioButton
                        android:id="@+id/yanlisUc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="YANLIŞ"
                        android:textColor="@color/beyaz"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView101"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/doğruUc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DOĞRU"
                        android:textColor="@color/beyaz"
                        android:textSize="18sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView86"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/textView114"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5)"
                    android:textColor="@color/mavi" />

                <TextView
                    android:id="@+id/textView87"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Haritalardaki küçültme oranına ölçek denir."
                    android:textColor="@color/beyaz" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView90"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/yanlisDört"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="YANLIŞ"
                        android:textColor="@color/beyaz"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView106"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/doğruDört"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DOĞRU"
                        android:textColor="@color/beyaz"
                        android:textSize="18sp" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView131"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/textView130"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6)"
                    android:textColor="@color/mavi" />

                <TextView
                    android:id="@+id/textView136"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Büyük ölçekli haritaların özellikleri arasında yer almaz"
                    android:textColor="@color/beyaz" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioButton
                        android:id="@+id/radiodoru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hata payı azdır."
                        android:textColor="@color/beyaz"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/radioyanlis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kağıt üzerinde kapladığı alan azdır. "
                        android:textColor="@color/beyaz"
                        android:textSize="18sp" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>